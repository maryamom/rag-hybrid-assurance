# Configuration email
# Copier ce fichier vers email.yaml et modifier les valeurs

smtp:
  server: smtp.gmail.com
  port: 587
  use_tls: true
  username: your_email@gmail.com
  password: your_app_password

email_templates:
  verification_subject: "Code de vérification - Assurance RAG"
  verification_body: |
    Bonjour,
    
    Voici votre code de vérification pour accéder à vos données personnelles :
    
    Code : {verification_code}
    
    Ce code est valide pendant 10 minutes.
    
    Cordialement,
    L'équipe Assurance RAG

  error_subject: "Erreur d'authentification - Assurance RAG"
  error_body: |
    Bonjour,
    
    Une erreur s'est produite lors de votre tentative d'authentification.
    
    Si vous n'avez pas effectué cette demande, veuillez ignorer cet email.
    
    Cordialement,
    L'équipe Assurance RAG
